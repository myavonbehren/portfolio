generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Works {
  id          String   @id @default(uuid())
  startDate   DateTime
  endDate     DateTime?
  title       String
  company     String
  description String
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Projects {
  id          String   @id @default(uuid())
  title       String
  description String
  skills      String[]
  github      String?
  live        String?
  image       String?
  startDate   DateTime
  endDate     DateTime
}

model Education {
  id          String   @id @default(uuid())
  startDate   DateTime
  endDate     DateTime
  title       String
  company     String
  icon        String?
}

model Skills {
  id                          String   @id @default(uuid())
  languages                   String[]
  frameworksAndLibraries      String[]
  developerToolsAndPlatforms  String[]
  design                      String[]
}

model About {
  id          String   @id @default(uuid())
  name        String
  description String
  image       String?
}